{
	"name": "registration",
	"private": true,
	"version": "1.0.0",
	"main": "src/backend/main.js",
	"author": "Joe Bloggs",
	"description": "Registration app",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run wait-and-start-electron\"",
		"wait-and-start-electron": "wait-on http://localhost:5173 && npm run dev:electron",
		"dev:svelte": "vite dev",
		"dev:electron": "electron src/backend/main.js",
		"build": "cross-env NODE_ENV=production ADAPTER=static npm run build:svelte",
		"build:svelte": "vite build",
		"build:electron:win": "ADAPTER=static npm run build && electron-builder -w --config build.config.json -p never",
		"build:electron:mac": "npm run build && electron-builder -m --config build.config.json -p never",
		"build:electron:linux": "npm run build && electron-builder --linux  --config build.config.json -p never"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.2.14",
		"@sveltejs/adapter-static": "3.0.9",
		"@sveltejs/kit": "2.27.3",
		"@sveltejs/vite-plugin-svelte": "6.1.1",
		"autoprefixer": "10.4.21",
		"concurrently": "9.2.0",
		"cross-env": "10.0.0",
		"dotenv": "17.2.1",
		"electron": "^37.2.6",
		"electron-builder": "26.0.19",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"prettier-plugin-tailwindcss": "0.6.14",
		"svelte": "5.38.0",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.11",
		"vite": "7.1.1",
		"wait-on": "^8.0.1"
	},
	"dependencies": {
		"@tailwindcss/forms": "0.5.10",
		"@tailwindcss/typography": "0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"bwip-js": "^4.7.0",
		"caniuse-lite": "^1.0.30001733",
		"chokidar": "^4.0.3",
		"daisyui": "^5.0.48",
		"electron-connect": "^0.6.3",
		"electron-packager": "^17.1.2",
		"electron-serve": "^2.1.1",
		"electron-window-state": "^5.0.3",
		"oracledb": "^6.9.0"
	}
}
